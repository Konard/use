{
  "name": "@konard/use",
  "version": "1.0.5",
  "description": "use: dynamically install and import any npm package",
  "main": "src/use-module.cjs",
  "exports": {
    ".": {
      "import": "./src/use-module.mjs",
      "require": "./src/use-module.cjs"
    }
  },
  "type": "module",
  "scripts": {
    "test": "yarn test:cjs && yarn test:mjs",
    "test:cjs": "node tests/use.cjs.test.cjs",
    "test:mjs": "node tests/use.mjs.test.mjs",
    "publish:version": "yarn version --patch && git push && git push --tags && yarn publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/konard/use.git"
  },
  "bugs": {
    "url": "https://github.com/konard/use/issues"
  },
  "keywords": [
    "use",
    "npm",
    "dynamic require",
    "dynamic import",
    "npm package loader",
    "module loader",
    "dependency management"
  ],
  "author": "Konard",
  "license": "Unlicense"
}
